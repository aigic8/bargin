{
  "compilerOptions": {
    "target": "ES5",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "incremental": true
  },
  "include": ["src/**/*", "./src/index.d.ts"],
  "exclude": ["build", "node_modules"]
}